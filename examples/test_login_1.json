{
  "rows": 3,
  "border": 2,
  "widgets": [
  {
   "type": "label",
   "label": "Enter your login information."
  },
  {
   "cols": 2,
   "rows": 3,
   "border": "vert",
   "widgets": [
    {
      "type": "label",
      "label": "Username:",
      "halign": "right"
    },
    {
      "type": "label",
      "label": "Password:",
      "halign": "right"
    },
    {
    },
    {
      "type": "textbox",
      "size": 10,
      "uid": "uname",
      "on_event": "login_callback"
    },
    {
      "type": "textbox",
      "size": 10,
      "hidden": true,
      "uid": "pass",
      "on_event": "login_callback"
    },
    {
     "type": "checkbox",
     "label": "Show password",
     "halign": "left",
     "on_event": "show_password"
    }
   ]
  },
  {
   "cols": 2,
   "border": "none",
   "halign": "right",
   "widgets": [
    {
      "type": "button",
      "label": "Ok",
      "on_event": "login_callback"
    },
    {
      "type": "button",
      "label": "Cancel",
      "on_event": "cancel_callback"
    }
   ]
  }
  ]
}
